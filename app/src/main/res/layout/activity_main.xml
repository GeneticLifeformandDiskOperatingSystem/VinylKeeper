<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landingPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBrowseRecords"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginVertical="64dip"
        android:layout_marginHorizontal="16dip"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Browse my records"
        android:textSize="32sp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/buttonAddRecord"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginVertical="32dip"
        android:layout_marginHorizontal="16dip"
        app:layout_constraintTop_toBottomOf="@id/buttonBrowseRecords"
        android:text="Add record"
        android:textSize="32sp"
        android:gravity="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>